import java.io.*;
import java.util.Scanner;

public class SimpleNotepad {

    private static final String FILE_NAME = "notes.txt";

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int choice;

        do {
            System.out.println("=== ç°¡æ˜“è¨˜äº‹æœ¬ ===");
            System.out.println("1. å¯«å…¥è¨˜äº‹");
            System.out.println("2. é¡¯ç¤ºå…¨éƒ¨è¨˜äº‹");
            System.out.println("3. æ¸…ç©ºè¨˜äº‹");
            System.out.println("0. é›¢é–‹");
            System.out.print("è«‹è¼¸å…¥é¸é …ï¼š");

            choice = scanner.nextInt();
            scanner.nextLine(); // å¸æ”¶æ›è¡Œç¬¦

            switch (choice) {
                case 1 -> writeNote(scanner);
                case 2 -> readNotes();
                case 3 -> clearNotes();
                case 0 -> System.out.println("å·²é›¢é–‹è¨˜äº‹æœ¬ã€‚");
                default -> System.out.println("ç„¡æ•ˆé¸é …ï¼Œè«‹é‡æ–°è¼¸å…¥ã€‚");
            }
            System.out.println();
        } while (choice != 0);

        scanner.close();
    }

    private static void writeNote(Scanner scanner) {
        System.out.print("è«‹è¼¸å…¥è¨˜äº‹å…§å®¹ï¼š");
        String note = scanner.nextLine();

        try (FileWriter fw = new FileWriter(FILE_NAME, true);
             BufferedWriter bw = new BufferedWriter(fw)) {
            bw.write(note);
            bw.newLine();
            System.out.println("âœ… å·²æˆåŠŸå¯«å…¥è¨˜äº‹ï¼");
        } catch (IOException e) {
            System.out.println("âŒ å¯«å…¥å¤±æ•—ï¼š" + e.getMessage());
        }
    }

    private static void readNotes() {
        System.out.println("=== æ‰€æœ‰è¨˜äº‹ ===");
        try (BufferedReader br = new BufferedReader(new FileReader(FILE_NAME))) {
            String line;
            boolean hasContent = false;
            while ((line = br.readLine()) != null) {
                System.out.println(line);
                hasContent = true;
            }
            if (!hasContent) {
                System.out.println("(ç›®å‰æ²’æœ‰è¨˜äº‹)");
            }
        } catch (IOException e) {
            System.out.println("âŒ è®€å–å¤±æ•—ï¼š" + e.getMessage());
        }
    }

    private static void clearNotes() {
        try (PrintWriter pw = new PrintWriter(FILE_NAME)) {
            pw.print(""); // æ¸…ç©ºå…§å®¹
            System.out.println("ğŸ§¹ å·²æ¸…ç©ºæ‰€æœ‰è¨˜äº‹ï¼");
        } catch (IOException e) {
            System.out.println("âŒ æ¸…ç©ºå¤±æ•—ï¼š" + e.getMessage());
        }
    }
}
